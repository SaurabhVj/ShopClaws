<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/notif_mgr"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            fresco:placeholderImage="@drawable/manager"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/notif_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/notif_mgr"
            android:hint="User Name"
            android:textStyle="bold"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/notif_mgr"
            android:layout_toRightOf="@+id/notif_sender"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:hint="mm:dd HH:MM"
            android:textSize="12dp" />



              <TextView
                  android:layout_marginTop="80dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                 android:layout_gravity="top"
                 android:textSize="18dp"
                  android:id="@+id/notif_detail"

                  />





    </RelativeLayout>
</android.support.v7.widget.CardView>