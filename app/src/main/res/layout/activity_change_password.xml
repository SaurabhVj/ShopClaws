<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
     android:padding="20dp"
    tools:context=".LoginRegister.ChangePassword">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue To Reset Password "
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:id="@+id/lable_cp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        />
    <android.support.design.widget.TextInputEditText
        android:id="@+id/change_pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/lable_cp"
        android:inputType="textPassword"
        android:layout_marginTop="60dp"
        android:background="@drawable/et_bg"
        android:hint="Enter Password"
        android:textColorHint="@color/white"
        android:paddingLeft="15dp"

        android:paddingRight="15dp"
        android:textColor="@color/white"
        android:textSize="15sp" />
    <android.support.design.widget.TextInputEditText
        android:id="@+id/conf_change_pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/change_pass"
        android:inputType="textPassword"
        android:layout_marginTop="40dp"
        android:background="@drawable/et_bg"
        android:hint="Confirm Password"
        android:textColorHint="@color/white"
        android:paddingLeft="15dp"

        android:paddingRight="15dp"
        android:textColor="@color/white"
        android:textSize="15sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/conf_change_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_xml_name"

        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Change Password"

        android:elevation="5dp"

        android:id="@+id/btn_change_pass"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"

        />


</RelativeLayout>