<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:padding="20sp"
    tools:context=".Utility.PushNotification">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/whatsnew"
        android:id="@+id/whatsnew"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:lines="5"
        app:layout_constraintTop_toBottomOf="@+id/whatsnew"
        android:paddingLeft="10dp"
        android:hint="Whats New !"
        android:gravity="top"

        android:inputType="textMultiLine"
        android:background="@drawable/grad_bg"


        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notify SalesPersons"
        android:id="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        android:layout_marginTop="25dp"

        android:background="@drawable/et_msg"

        />
</android.support.constraint.ConstraintLayout>