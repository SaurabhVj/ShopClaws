<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    android:padding="20dp"
    tools:context=".LoginRegister.RequestOtp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="40dp"
        android:id="@+id/f_head"
        app:placeholderImage="@drawable/forgotpass"
        app:roundAsCircle="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Registered Mobile Number"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/f_head"
        android:textColor="@color/white"
        android:id="@+id/lable_fp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/f_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/lable_fp"
        android:inputType="number"
        android:layout_marginTop="40dp"
        android:background="@drawable/et_bg"
         android:hint="Mobile Number"
        android:textColorHint="@color/white"
        android:paddingLeft="15dp"

        android:paddingRight="15dp"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/f_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_xml_name"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Request Otp"

        android:elevation="5dp"

        android:id="@+id/loginButton"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"

        />
</RelativeLayout>